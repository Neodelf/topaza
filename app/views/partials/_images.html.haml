- if item.persisted?
  - item.images.each do |image|
    %br
    = image_tag(image.name.url(:admin_show))
    - unless image.main
      = link_to 'Сделать главной', main_admin_image_path(image), data: { confirm: 'Вы правда хотите сделать это изображение главным?' }
    = link_to 'Удалить', admin_image_path(image), method: :delete, data: { confirm: 'Вы уверены, что хотите удалить изображение?' }

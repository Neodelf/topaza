- if item.persisted?
  - item.images.each do |image|
    = image_tag(image.name.url(:admin_show))
    - unless image.main
      = link_to 'Set main image', main_admin_image_path(image), data: { confirm: 'Are you sure to make this image the main?' }
    = link_to 'Destroy', admin_image_path(image), method: :delete, data: { confirm: 'Are you sure?' }
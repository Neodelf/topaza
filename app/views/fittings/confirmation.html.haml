= javascript_include_tag '//api-maps.yandex.ru/2.0/?load=package.full&lang=ru-RU'
.confirm-wrapper
  .confirm-header
    Впереди — самое приятное!
    .confirm-header-underline
  .confirm-text
    Будем ждать вас
    %b= params[:date]
    в
    %b= params[:time]
    по адресу
    %b ул. Жуковского, д.22
    %br
    Если ваши планы изменятся, пожалуйста, предупредите нас по телефону.
  #confirm-maps
:javascript
  ymaps.ready(init);

  function init () {
      var myMap = new ymaps.Map('confirm-maps', {
              center: [59.93609814, 30.35774577], //Координаты центра карты, тут осуществляется позиционирование ее в диве
              zoom: 17 //Масштаб - чем больше цифра, тем крупнее карта
          }),
          markBelinskogo = new ymaps.Placemark([59.93609814, 30.35774577], {
              hintContent: "ул. Жуковского, д.22 <br/>(812) 272-55-84"
          }, {
              // Опции.
              // Необходимо указать данный тип макета.
              iconLayout: 'default#image',
              // Своё изображение иконки метки.
              iconImageHref: '/assets/mark.png',
              // Размеры метки.
              iconImageSize: [55, 70],
              // Смещение левого верхнего угла иконки относительно
              // её "ножки" (точки привязки).
              iconImageOffset: [-30, -65]
          });
      myMap.geoObjects.add(markBelinskogo);
  }
